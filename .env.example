# Talk to Your Data - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Connection (PostgreSQL)
# Format: postgresql+psycopg2://user:password@host:port/database
DATABASE_URL=postgresql+psycopg2://your_user:your_password@localhost:5432/your_database

# Google Gemini API Key (optional - system works with fallback mode if not provided)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_google_gemini_api_key_here

# LLM Model Configuration
GENAI_MODEL_ID=gemini-2.0-flash-exp

# Enable Template-Based Fallback Mode
# Set to 'true' to skip LLM calls and use template-based SQL generation
# Useful when LLM quota is exhausted or for offline/demo mode
DEV_FALLBACK_MODE=false
